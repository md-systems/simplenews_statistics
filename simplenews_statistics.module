/**
 * Get open count for the given node.
 */
function simplenews_statistics_get_open_count($nid) {
  $query = db_select('simplenews_statistics_open', 'ssc')
    ->condition('ssc.nid', $nid)
    ->countQuery();
  return $query->execute()->fetchField();
}
